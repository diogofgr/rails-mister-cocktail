<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ingredient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <h3><%= cocktail.name %></h3>
      <%= cocktail.ingredients.each do |ingredient| %>
      <p><%= ingredient.name %></p>
      <% end %>
      <p><%= link_to 'Show', cocktail %></p>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>
